generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String                   @id @default(cuid())
  name                String?
  email               String?                  @unique
  emailVerified       DateTime?
  image               String?
  password            String?
  role                UserRole                 @default(STUDENT)
  isPremium           Boolean                  @default(false)
  createdAt           DateTime                 @default(now())
  updatedAt           DateTime                 @updatedAt
  onboardingCompleted Boolean                  @default(false)
  dailyGoal           Int                      @default(20)
  stream              String?
  targetCourse        String?
  targetUniversity    String?
  targetExamId        String?

  // Gamification
  xp                  Int                      @default(0)
  level               Int                      @default(1)
  currentStreak       Int                      @default(0)
  longestStreak       Int                      @default(0)
  lastActiveDate      DateTime?                @default(now())

  accounts            Account[]
  mockSessions        MockSession[]
  practiceSessions    PracticeSession[]
  sessions            Session[]
  achievements        UserAchievement[]
  performance         UserPerformanceSummary[]
  questionHistory     UserQuestionHistory[]
  targetedSubjects    Subject[]                @relation("SubjectToUser")
  targetExam          Exam?                     @relation(fields: [targetExamId], references: [id])
  feedback            Feedback[]

  @@index([xp(sort: Desc)])
  @@index([role])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}


model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Exam {
  id          String    @id @default(cuid())
  name        String    @unique
  code        String    @unique // e.g., "CUET-UG", "GATE", "CAT"
  description String?
  subjects    Subject[] @relation("ExamToSubject")
  users       User[]
}

model Subject {
  id                   String                   @id @default(cuid())
  name                 String                   @unique
  description          String?
  mockSessions         MockSession[]
  questions            Question[]
  topics               Topic[]
  performanceSummaries UserPerformanceSummary[]
  resources            Resource[]
  students             User[]                   @relation("SubjectToUser")
  exams                Exam[]                   @relation("ExamToSubject")
}

model Topic {
  id        String     @id @default(cuid())
  name      String
  subjectId String
  questions Question[]
  resources Resource[]
  subject   Subject    @relation(fields: [subjectId], references: [id])

  @@unique([name, subjectId])
}

model Question {
  id               String                @id @default(cuid())
  content          String
  options          Json
  correctOption    Int
  explanation      String?
  difficulty       Difficulty            @default(EASY)
  subjectId        String
  topicId          String
  pyqYear          Int?
  createdAt        DateTime              @default(now())
  updatedAt        DateTime              @updatedAt
  subject          Subject               @relation(fields: [subjectId], references: [id])
  topic            Topic                 @relation(fields: [topicId], references: [id])
  sessionQuestions SessionQuestion[]
  history          UserQuestionHistory[]
}

model PracticeSession {
  id        String            @id @default(cuid())
  userId    String
  subjectId String?
  topicId   String?
  completed Boolean           @default(false)
  score     Int               @default(0)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  user      User              @relation(fields: [userId], references: [id])
  questions SessionQuestion[]
}

model MockSession {
  id        String            @id @default(cuid())
  userId    String
  subjectId String
  startTime DateTime          @default(now())
  endTime   DateTime?
  timeSpent Int               @default(0)
  score     Int               @default(0)
  accuracy  Float             @default(0)
  completed Boolean           @default(false)
  subject   Subject           @relation(fields: [subjectId], references: [id])
  user      User              @relation(fields: [userId], references: [id])
  questions SessionQuestion[]
}

model SessionQuestion {
  id                String           @id @default(cuid())
  practiceSessionId String?
  mockSessionId     String?
  questionId        String
  userAnswer        Int?
  isCorrect         Boolean?
  timeSpent         Int?             @default(0)
  createdAt         DateTime         @default(now())
  mockSession       MockSession?     @relation(fields: [mockSessionId], references: [id])
  practiceSession   PracticeSession? @relation(fields: [practiceSessionId], references: [id])
  question          Question         @relation(fields: [questionId], references: [id])
}

model UserQuestionHistory {
  id            String   @id @default(cuid())
  userId        String
  questionId    String
  lastAttempted DateTime @default(now())
  isCorrect     Boolean
  occurrences   Int      @default(1)
  question      Question @relation(fields: [questionId], references: [id])
  user          User     @relation(fields: [userId], references: [id])

  @@unique([userId, questionId])
}

model UserPerformanceSummary {
  id             String  @id @default(cuid())
  userId         String
  subjectId      String
  totalAttempted Int     @default(0)
  totalCorrect   Int     @default(0)
  totalAccuracy  Float   @default(0)
  subject        Subject @relation(fields: [subjectId], references: [id])
  user           User    @relation(fields: [userId], references: [id])

  @@unique([userId, subjectId])
}

model Achievement {
  id          String            @id @default(cuid())
  name        String            @unique
  description String
  icon        String?
  users       UserAchievement[]
}

model UserAchievement {
  id            String      @id @default(cuid())
  userId        String
  achievementId String
  unlockedAt    DateTime    @default(now())
  achievement   Achievement @relation(fields: [achievementId], references: [id])
  user          User        @relation(fields: [userId], references: [id])

  @@unique([userId, achievementId])
}

model Resource {
  id        String   @id @default(cuid())
  title     String
  type      String   // E.g., "PDF", "LINK", "NOTES"
  url       String
  subjectId String
  topicId   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  subject   Subject  @relation(fields: [subjectId], references: [id])
  topic     Topic?   @relation(fields: [topicId], references: [id])
}

enum UserRole {
  STUDENT
  ADMIN
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

model Feedback {
  id        String   @id @default(cuid())
  userId    String
  message   String
  type      String   @default("GENERAL") // BUG, FEATURE, GENERAL
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Job {
  id              String   @id @default(cuid())
  title           String
  department      String
  location        String
  type            String   // Full-time, Part-time, Internship
  description     String
  applicationLink String?
  email           String?
  active          Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
