
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  type       VerificationType @default(EMAIL)

  @@unique([identifier, token])
}

enum VerificationType {
  EMAIL
  PHONE
  PASSWORD_RESET
}

